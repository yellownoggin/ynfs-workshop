{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "listFiles": true
    },
    "exclude": [
        "./examples"
    ],
    "filesGlob": [
        "*.ts",
        "./**/*.ts",
        "./typings/index.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "app.config.ts",
        "app.module.ts",
        "app.routes.ts",
        "./app.config.ts",
        "./app.module.ts",
        "./app.routes.ts",
        "./landing/landing.controller.ts",
        "./ng1-sandbox/ng1-sandbox.route.ts",
        "./services/logger.service.ts",
        "./typings/globals/angular/index.d.ts",
        "./typings/globals/toastr/index.d.ts",
        "./typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
