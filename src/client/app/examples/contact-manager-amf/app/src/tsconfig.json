{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "listFiles": true
    },
    "filesGlob": [
        "./*.ts",
        "../typings/index.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./app.module.ts",
        "./main.controller.ts",
        "../typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
